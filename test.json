{
    "openapi": "3.0.1",
    "info": {
        "title": "Procurement-SK S4 API",
        "description": "Procurement-SK S4 API Description",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://api.energizedanalytics.com/procurement-sks4"
        }
    ],
    "paths": {
        "/CategorizePurchasingData": {
            "post": {
                "tags": [
                    "Procurement"
                ],
                "summary": "CategorizePurchasingData",
                "description": "Returns the predicted category and its probability",
                "operationId": "CategorizePurchasingData",
                "requestBody": {
                    "description": "The request object (see model and schema for details)...",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CategorizePurchasingDataRequest"
                            },
                            "example": {
                                "orderId": "123",
                                "orderPos": 1,
                                "orderDescriptionShort": "Laserdrucker OKI C824n",
                                "accountingArea": "1010",
                                "additionalFields": [
                                    {
                                        "structureName": "AUFTRAGSNUMMER",
                                        "valuePart": "Ix09"
                                    },
                                    {
                                        "structureName": "BESTELLWERT_POS",
                                        "valuePart": "99.7"
                                    },
                                    {
                                        "structureName": "CURRENCY",
                                        "valuePart": "EUR"
                                    },
                                    {
                                        "structureName": "LIEFERANTEN_NR",
                                        "valuePart": "5041495"
                                    },
                                    {
                                        "structureName": "MENGE",
                                        "valuePart": "1"
                                    },
                                    {
                                        "structureName": "MENGENEINHEIT",
                                        "valuePart": "Stueck"
                                    },
                                    {
                                        "structureName": "MATKL",
                                        "valuePart": "19140101"
                                    },
                                    {
                                        "structureName": "SEGMENT",
                                        "valuePart": "1000"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CategorizePurchasingDataResponse"
                                },
                                "example": {
                                    "sachkonto": "12345",
                                    "sachkontoProbability": 0.94
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                },
                                "example": {
                                    "errorCode": 123456,
                                    "errorMessage": "The request is invalid.",
                                    "isNonRecoverableError": true
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthorizedResponse"
                                },
                                "example": {
                                    "statusCode": 401,
                                    "message": "Access denied due to invalid subscription key. Make sure to provide a valid key for an active subscription."
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                },
                                "example": {
                                    "errorCode": 123456,
                                    "errorMessage": "Some unexpected error occurred. Please contact the Sandy support.",
                                    "isNonRecoverableError": true
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AdditionalField": {
                "required": [
                    "structureName"
                ],
                "type": "object",
                "properties": {
                    "structureName": {
                        "type": "string",
                        "description": "The name of the field"
                    },
                    "valuePart": {
                        "type": "string",
                        "description": "The value of the field",
                        "nullable": true
                    }
                },
                "additionalProperties": false,
                "description": "A key value pair to represent additional fields"
            },
            "CategorizePurchasingDataRequest": {
                "required": [
                    "accountingArea",
                    "orderDescriptionShort",
                    "orderId",
                    "orderPos"
                ],
                "type": "object",
                "properties": {
                    "orderId": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Order ID (BW Name: 'BE_isoliert')"
                    },
                    "orderPos": {
                        "type": "integer",
                        "description": "Orderposition (BW Name: 'BE-Pos')",
                        "format": "int32"
                    },
                    "orderDescriptionShort": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Short version of order description (BW Name: 'BE-Pos Text')"
                    },
                    "costCenterId": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Cost center ID (EKKN Name: Kostenstelle)",
                        "nullable": true
                    },
                    "accountingArea": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Accounting Area ID (EKKN Name: Buchungskreis)"
                    },
                    "additionalFields": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/AdditionalField"
                        },
                        "description": "A list of key value pairs (string, string) to represent additional values",
                        "nullable": true
                    }
                },
                "additionalProperties": false,
                "description": ""
            },
            "CategorizePurchasingDataResponse": {
                "required": [
                    "sachkonto",
                    "sachkontoProbability"
                ],
                "type": "object",
                "properties": {
                    "sachkonto": {
                        "type": "string",
                        "description": "Predicted general ledger account (SAP: Sachkonto) or \"599999\" if no prediction could be made"
                    },
                    "sachkontoProbability": {
                        "type": "number",
                        "description": "Prediction probability of general ledger account",
                        "format": "double"
                    }
                },
                "additionalProperties": false
            },
            "ErrorResponse": {
                "required": [
                    "errorCode",
                    "errorMessage",
                    "isNonRecoverableError"
                ],
                "type": "object",
                "properties": {
                    "errorCode": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "errorMessage": {
                        "type": "string"
                    },
                    "isNonRecoverableError": {
                        "type": "boolean"
                    }
                },
                "additionalProperties": false
            },
            "UnauthorizedResponse": {
                "required": [
                    "message",
                    "statusCode"
                ],
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "securitySchemes": {
            "apiKeyHeader": {
                "type": "apiKey",
                "name": "Ocp-Apim-Subscription-Key",
                "in": "header"
            },
            "apiKeyQuery": {
                "type": "apiKey",
                "name": "subscription-key",
                "in": "query"
            }
        }
    },
    "security": [
